<script lang="ts">
    document.addEventListener("DOMContentLoaded", () => {
        const selectionItems = document.querySelectorAll(
            ".about-me__selection-item"
        );
        const boxes = document.querySelectorAll(".about-me__box");

        selectionItems.forEach((item, index) => {
            item.addEventListener("click", () => {
                selectionItems.forEach((oldItems) => {
                    oldItems.classList.remove(
                        "about-me__selection-item--active"
                    );
                });

                item.classList.add("about-me__selection-item--active");

                boxes.forEach((box) => {
                    box.classList.remove("about-me__box--active");
                });
                boxes[index].classList.add("about-me__box--active");
            });
        });
    });
</script>
